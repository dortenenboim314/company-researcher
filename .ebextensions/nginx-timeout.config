files:
  "/etc/nginx/conf.d/my-timeout.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      client_header_timeout 900;
      client_body_timeout 900;
      send_timeout 900;
      proxy_connect_timeout 900;
      proxy_read_timeout 900;
      proxy_send_timeout 900;

container_commands:
  01_reload_nginx:
    command: "service nginx reload"
    leader_only: true